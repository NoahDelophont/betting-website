{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}

{% block body %}
<div class="user-profile">
    <img class="avatar" src="#" alt="Profile" />
    <div class="username">Username</div>
    <div class="bio text-medium"> <img src="{{ asset('assets/images/stars.png') }}" style="width: 15%"> Level of the user </div>


    <ul class="data margin-top">
        <li>
            <span class="nb_victory"> 10 won bets</span>
        </li>
        <li>
            <span class="nb_defeat"> 2 lost bets</span>
        </li>
    </ul>

    <div class = "margin">
        <button id="follow">Follow this player</button>
    </div>

    {% for i in 1..3 %}
        <div class="row listPari" id="{#{{ matches["matches"][i]['id'] }}#}" style="cursor:pointer;" onclick="{#{{ functionJs }}#}" >
            <div class="col-md-8 PariPasse">
                <div class="row">
                    <div class="col-md-12 col-md-offset-1 NomChampionnat">
                        {#{{ matches['competition']['name'] }}#}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-md-offset-1 NomEquipe">
                        {#{{ matches["matches"][i]['homeTeam']['name'] }} - {{ matches["matches"][i]['awayTeam']['name'] }}#}
                    </div>
                    <div class="col-md-3 col-md-offset-2">
                        {#{{ dateAffichee }}#}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-md-offset-1 text-center Teams">
                        <strong> Team A - Team B </strong>
                    </div>
                    <div class="col-md-3">
                        Pari : Victoire, DÃ©faite ou Nul
                    </div>
                    <div class="col-md-3 RealScore">
                        Real score : 2 - 1
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}


</div>

{% endblock %}